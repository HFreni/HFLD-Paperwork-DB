<section class="section">
  <div class="container">
    <p id="notice"><%= notice %></p>
    <div class="columns">
      <% @cues.each do |cue| %>
        <div class="column has-text-centered">
          <h1>Cues</h1>

          <table class="table is-fullwidth">
            <thead>
              <tr>
                <th>Lx cue</th>
                <th>Spot cue</th>
                <th>Cue info</th>
                <th>Scene</th>
                <th>Song</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
                <tr>
                  <td><%= cue.lx_cue %></td>
                  <td><%= cue.spot_cue %></td>
                  <td><%= cue.cue_info %></td>
                  <td><%= cue.scene %></td>
                  <td><%= cue.song %></td>
                  <td><%= link_to 'Show', cue %></td>
                  <td><%= link_to 'Edit', edit_cue_path(cue) %></td>
                  <td><%= link_to 'Destroy', cue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            </tbody>
          </table>
          <%= link_to 'New Cue', new_cue_path %>
        </div>
        <br>
        <% cue.cue_spotlights.each do |subcue| %>
          <div class="column has-text-centered">
            <table class="table is-fullwidth">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Color TBD</th>
                  <th>Size</th>
                  <th>Intensity</th>
                  <th>Action</th>
                  <th>Time</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= subcue.id %></td>
                  <td>Color TBD</td>
                  <td><%= subcue.size_id %></td>
                  <td><%= subcue.intensity %></td>
                  <td><%= subcue.action_id %></td>
                  <td><%= subcue.time %></td>
                  <td><%= subcue.description %></td>
                </tr>
              </tbody>
            </table>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>