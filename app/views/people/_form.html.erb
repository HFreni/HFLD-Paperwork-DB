    <%= form.label :person_lname, :class => "label" %>
    <%= form.text_field :person_lname, :class =>"input" %>
  </div>

  <div class="field">
    <%= form.label :person_email, :class => "label" %>
    <%= form.text_field :person_email, :class =>"input" %>
  </div>

  <div class="field">
    <%= form.label :person_phone, :class => "label" %>
    <%= form.text_field :person_phone, :class =>"input" %>
  </div>

  <div class="actions">
    <%= form.submit :class => "button is-link" %>
  </div>
<% end %>